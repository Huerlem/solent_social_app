rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /events/{eventId} {
      allow read, write: if true;
    }
    match /bookings/{bookingId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.user.uid;
      allow write: if request.auth != null;
    }
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId; // O usu치rio pode ler seus pr칩prios dados
      allow write: if request.auth != null && request.auth.uid == userId; // O usu치rio pode atualizar seus pr칩prios dados
    }
  }
}
